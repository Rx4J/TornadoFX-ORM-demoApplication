<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.lanik.kursach.model">
    <class name="Shop" table="shop">
        <id name="id" column="shop_id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <set name="phones" cascade="all" lazy="false">
            <key column="shop_id"/>
            <one-to-many class="com.lanik.kursach.model.Phone"/>
        </set>
    </class>
</hibernate-mapping>